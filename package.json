{
  "name": "nagiyu-platform",
  "version": "1.0.0",
  "private": true,
  "description": "Nagiyu Platform Monorepo",
  "workspaces": [
    "services/*",
    "libs/*"
  ],
  "scripts": {
    "dev:tools": "npm run dev --workspace=services/tools",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:e2e": "npm run test:e2e --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "format": "npm run format --workspaces --if-present",
    "format:check": "npm run format:check --workspaces --if-present"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  }
}