{
  "name": "nagiyu-platform",
  "version": "1.0.0",
  "private": true,
  "description": "Nagiyu Platform Monorepo",
  "workspaces": [
    "services/tools",
    "services/*/core",
    "services/*/web",
    "services/*/web-*",
    "services/*/batch",
    "services/*/batch-*",
    "services/*/api",
    "libs/*",
    "infra",
    "infra/*"
  ],
  "scripts": {
    "test": "npm run test --workspaces --if-present",
    "test:e2e": "npm run test:e2e --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "format": "npm run format --workspaces --if-present",
    "format:check": "npm run format:check --workspaces --if-present"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@jest/types": "^30.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "dotenv": "^17.2.3",
    "eslint": "^9",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "prettier": "^3.8.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5",
    "typescript-eslint": "^8.21.0"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.7",
    "@mui/material": "^7.3.7",
    "@mui/material-nextjs": "^7.3.7",
    "next": "^16.1.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  }
}
