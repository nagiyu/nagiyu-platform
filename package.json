{
  "name": "nagiyu-platform",
  "version": "1.0.0",
  "private": true,
  "description": "Nagiyu Platform Monorepo",
  "workspaces": [
    "services/tools",
    "services/*/core",
    "services/*/web",
    "services/*/web-*",
    "services/*/batch",
    "services/*/batch-*",
    "services/*/api",
    "libs/*",
    "infra/*"
  ],
  "scripts": {
    "dev:tools": "npm run dev --workspace=services/tools",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:e2e": "npm run test:e2e --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "format": "npm run format --workspaces --if-present",
    "format:check": "npm run format:check --workspaces --if-present"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@jest/types": "^30.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "eslint": "^9",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "prettier": "^3.7.4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5",
    "typescript-eslint": "^8.21.0"
  }
}
