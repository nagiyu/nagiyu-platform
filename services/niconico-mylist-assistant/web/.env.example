# NextAuth Configuration
# Generate a random secret: openssl rand -base64 32
# NextAuth v5 で使用される環境変数
AUTH_SECRET=your-auth-secret-here

# Auth Service URL
# Auth サービスの URL（OAuth 認証のリダイレクト先）
# Note: Auth サービスのポートは 3001（本番では実際の Auth サービス URL）
NEXT_PUBLIC_AUTH_URL=http://localhost:3001

# Application Configuration
# 自サービスのベース URL（callbackUrl 生成などに使用）
APP_URL=http://localhost:3000
APP_VERSION=0.1.0

# DynamoDB テーブル名
DYNAMODB_TABLE_NAME=dev-niconico-mylist-assistant

# AWS Batch設定
BATCH_JOB_QUEUE=arn:aws:batch:us-east-1:123456789012:job-queue/niconico-mylist-assistant-dev
BATCH_JOB_DEFINITION=arn:aws:batch:us-east-1:123456789012:job-definition/niconico-mylist-assistant-dev:1

# 暗号化設定
# パスワード暗号化に使用する Secrets Manager のシークレット名
ENCRYPTION_SECRET_NAME=niconico-mylist-assistant/shared-secret-key

# AWS Region (SDK用)
# Secrets Manager などの AWS SDK が使用するリージョン
AWS_REGION_FOR_SDK=us-east-1

# Node Environment
NODE_ENV=development
