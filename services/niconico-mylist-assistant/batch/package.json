{
  "name": "@nagiyu/niconico-mylist-assistant-batch",
  "version": "1.0.0",
  "type": "module",
  "description": "Batch job for niconico mylist registration",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest --passWithNoTests",
    "test:integration": "playwright test",
    "test:integration:headed": "HEADLESS=false playwright test",
    "test:integration:debug": "PWDEBUG=1 playwright test",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\""
  },
  "dependencies": {
    "@nagiyu/niconico-mylist-assistant-core": "*",
    "@nagiyu/browser": "*",
    "playwright": "1.57.0",
    "dotenv": "^16.4.7"
  },
  "devDependencies": {
    "@playwright/test": "1.57.0"
  }
}
